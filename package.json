{
	"name": "beebot",
	"version": "0.1.0",
	"private": true,
	"main": "nw.html",
	"node-remote": "http://localhost:3000",
	"dependencies": {
		"hookrouter": "^1.2.3",
		"jquery": "^3.4.1",
		"node-sass": "^4.12.0",
		"prop-types": "^15.7.2",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-scripts": "3.0.1"
	},
	"devDependencies": {
		"concurrently": "^4.1.1",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^4.3.0",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.12.4",
		"prettier-eslint": "^8.8.2",
		"stylelint": "^10.1.0",
		"stylelint-config-prettier": "^5.2.0"
	},
	"scripts": {
		"start": "concurrently \"npm run-script start-react\" \"npm run-script start-nw\"",
		"start-react": "react-scripts start",
		"start-nw": "nw .",
		"build": "react-scripts build && nwbuild",
		"lint:js": "eslint ./src ./public/js --fix",
		"lint:sass": "stylelint ./src/styles",
		"lint": "lint:js && lint:sass",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"nwBuilder": {
		"//": "https://github.com/nwjs-community/nw-builder",
		"platforms": [
			"win32",
			"win64"
		],
		"version": "latest",
		"flavor": "normal",
		"buildDir": "./build",
		"cacheDir": "./cache",
		"appName": "Безопастност на движението по пътищата"
	},
	"window": {
		"toolbar": false,
		"width": 1280,
		"height": 720,
		"frame": true,
		"resizable": false,
		"icon": "./public/img/favicon.png"
	}
}